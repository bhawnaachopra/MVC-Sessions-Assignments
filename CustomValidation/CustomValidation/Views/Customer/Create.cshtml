@using CustomValidation.Models

@{
                /**/

                ViewBag.Title = "Create";
                Layout = "~/Views/Shared/_Layout.cshtml";

}

@model Customer

<div class="jumbotron">
    <h2>Customer Details</h2>
    <p class="lead"></p>
</div>


@using (Html.BeginForm("Create", "Customer", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(model => model.CompanyName, new { @class = "control-label col-md-1" })
        @Html.TextBoxFor(model => model.CompanyName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.CompanyName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Age, new { @class = "control-label col-md-1" })
        @Html.TextBoxFor(model => model.Age, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Age)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.BirthDate, new { @class = "control-label col-md-1" })
        @Html.TextBoxFor(model => model.BirthDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.BirthDate)
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/validbirthdate.js")" type="text/javascript"></script>
}